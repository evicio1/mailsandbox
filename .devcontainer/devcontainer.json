{
	"name": "Mail Sandbox",
	"dockerComposeFile": "docker-compose.yml",
	"service": "web",
	"workspaceFolder": "/var/www/app",
	"overrideCommand": false,
	"customizations": {
		"vscode": {
			"extensions": [
				"bmewburn.vscode-intelephense-client",
				"xdebug.php-debug"
			],
			"settings": {
				"php.validate.executablePath": "/usr/local/bin/php"
			}
		}
	},
	"forwardPorts": [
		8000,
		8081,
		3306
	],
	"portsAttributes": {
		"8000": {
			"label": "Web Interface",
			"onAutoForward": "notify"
		},
		"8081": {
			"label": "phpMyAdmin",
			"onAutoForward": "notify"
		},
		"3306": {
			"label": "MySQL",
			"onAutoForward": "silent"
		}
	},
	"postCreateCommand": "mkdir -p storage/attachments && chmod -R 777 storage"
}